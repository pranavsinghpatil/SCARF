# SCARF Environment Configuration
# Copy this file to .env and fill in your keys

# --- 1. AI Reasoning Services (Novita AI) ---
# Specific for ERNIE 4.5/5 access
NOVITA_API_KEY="your_novita_api_key_here"
NOVITA_BASE_URL="https://api.novita.ai/v1" 

# --- 2. Deployment (GitHub Pages) ---
# Only needed if you run the 'deploy' module
GITHUB_TOKEN="your_github_personal_access_token"
GITHUB_USERNAME="your_github_username"
GITHUB_REPO_BASE="scarf-reports"

# --- 3. App Settings ---
SCARF_ENV="development"
PORT=8000
LOG_LEVEL="INFO"
